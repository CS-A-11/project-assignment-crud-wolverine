          .clearfix
// header-section-ends
// content-section-starts
.Popular-Restaurants-content
  .Popular-Restaurants-grids
    .container
    -var index=0;
    each entry in rests
      .Popular-Restaurants-grid.wow.fadeInRight(data-wow-delay='0.4s')
     
        .col-md-3.restaurent-logo
          img.img-responsive(src=entry.image, alt='')
        .col-md-2.restaurent-title
          .logo-title
          
            h4
              //-a(href='/rest/:restid')= entry.name
              a(href='/rest/' +  entry._id)= entry.name
               
         
          .rating
            span ratings
            a(href='#')
              img.img-responsive(src='images/star1.jpeg', alt='')
        .col-md-7.buy
          a.morebtn.hvr-rectangle-in(href='/menu') buy
        .clearfix
    -index++;
      
      .footer
        .container
          p.wow.fadeInLeft(data-wow-delay='0.4s') &copy; FOODSETGO
